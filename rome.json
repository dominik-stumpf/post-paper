{
  "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "correctness": {
        "noUnusedVariables": "off"
      },
      "nursery": {
        "all": true,
        "useNamingConvention": "off"
      },
      "suspicious": {
        "noRedundantUseStrict": "off"
      },
      "style": {
        "noImplicitBoolean": "off",
        "noNonNullAssertion": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
